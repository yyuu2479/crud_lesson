<div class="col-md-12 mx-auto">
  <table class="table table-hover shadow-sm">
    <thead>
      <tr>
        <th></th>
        <th>タイトル</th>
        <th>本文</th>
        <th>いいね数</th>
        <th>コメント数</th>

        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% comments.each do |comment|%>
        <tr>
          <td><%= attachment_image_tag comment, :image, :fill,100,100, format: 'jpeg',
          fallback:'noimage.jpeg', size:'100x100'%></td>
          <td><%= link_to comment.title, comment_path(comment.id) %></td>
          <td><%= comment.body %></td>
          <!--いいね数表示＆いいねボタン-->
          <td>
            <% if comment.favorited_by?(current_user)%>
              <%= link_to comment_favorites_path(comment.id), method: :delete do %>
                <i class="fas fa-heart heart"></i><p class="text-dark good-btn"><%= comment.favorites.count %></p>
              <% end %>
            <% else %>
              <%= link_to comment_favorites_path(comment.id), method: :post do %>
                <i class="far fa-heart text-dark"></i><p class="text-dark good-btn"><%= comment.favorites.count %></p>
              <% end %>
            <% end %>
          </td>
          <!--コメント数表示-->
          <td>
            <%= comment.post_comments.count%> コメント
          </td>
          <!--編集・削除ボタン-->
          <% if comment.user == current_user%>
            <td><%= link_to '編集', edit_comment_path(comment.id), class:'btn btn-success btn-sm' %></td>
            <td><%= link_to '削除', comment_path(comment.id), method: :delete, class:'btn btn-danger btn-sm', data:{confirm:"本当に削除しますか？" } %></td>
          <%else%>
            <td></td>
            <td></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>