<h2>投稿一覧＆新規投稿</h2>

<!--投稿一覧-->
<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>本文</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
      <% @comments.each do |comment|%>
        <tr>
          <td><%= link_to comment.title, comment_path(comment.id) %></td>
          <td><%= comment.body %></td>
          <td><%= link_to '編集', edit_comment_path(comment.id) %> |</td>
          <td><%= link_to '削除', comment_path(comment.id), method: :delete %></td>
        </tr>
      <% end %>
  </tbody>
</table>

<!--新規投稿-->
<%= form_with model: @comment, local: true do |f|%>
  <div class="text-field">
    <p>タイトル</p>
    <%= f.text_field :title %>
  </div>
  <div class="text-field">
    <p>本文</p>
    <%= f.text_area :body %>
  </div>
  <div class="btn">
    <%= f.submit '投稿' %>
  </div>
<% end %>