<div class="container">
  <div class="card w-50 mx-auto shadow show-title">
    <%= attachment_image_tag @comment, :image, :fill,500,500, format: 'jpeg', fallback: 'no_image-ede28af4bad96368ef41be1b4be1cffce0d9402540f75d17895e32cb0d2af5e6.jpeg', class:'card-img-top'%>
    <div class="card-body">
      <h5 class="card-title">タイトル: <%= @comment.title%></h5>
      <p class="card-text">本文: <%= @comment.body %></p>
    </div>
    <%= link_to '戻る', comments_path, class:'btn btn-primary' %>
  </div>
</div>