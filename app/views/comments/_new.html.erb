<div class="col-sm-8 col-md-6 ml-2 mb-5">
  <%= form_with model: comment, local: true do |f|%>
    <div class="form-group ">
      <%= f.label :title %>
      <%= f.text_field :title, class:'form-control', id:'title' %>
    </div>
    <div class="form-group">
      <%= f.label :image%>
      <%= f.attachment_field :image, class:'form-control-file', id:'image' %>
    </div>
    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_area :body, class:'form-control form-control-lg', size:'90x5', id:'body' %>
    </div>
    <div class="ml-0">
      <%= f.submit '投稿', class:'btn btn-info'%>
    </div>
  <% end %>
</div>