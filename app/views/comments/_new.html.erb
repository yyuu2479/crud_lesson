<div class="col-md-4 ml-2 mb-5">
  <%= form_with model: comment, local: true do |f|%>
    <div class="form-group ">
      <label id="title">タイトル</label>
      <%= f.text_field :title, class:'form-control', id:'title' %>
    </div>
    <div class="form-group">
      <label id="image">画像</label>
      <%= f.attachment_field :image, class:'form-control-file', id:'image' %>
    </div>
    <div class="form-group">
      <div class="form-group">
      <label id ="body">本文</label>
      <%= f.text_area :body, class:'form-control', id:'body' %>
    </div>
    <div class="ml-0">
      <%= f.submit '投稿', class:'btn btn-info'%>
    </div>
  <% end %>
</div>