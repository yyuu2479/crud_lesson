<div class="col-md-4 ml-5">
  <%= form_with model: comment, local: true do |f|%>
    <div class="form-group">
      <label>タイトル</label>
      <%= f.text_field :title, class:'form-control'  %>
    </div>
    <div class="form-group">
      <label>本文</label>
      <%= f.text_area :body, class:'form-control' %>
    </div>
    <div class="ml-0">
      <%= f.submit '投稿', class:'btn btn-success'%>
    </div>
  <% end %>
</div>