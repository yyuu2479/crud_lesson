<% post_comments.each do |post_comment|%>
  <tr>
    <td>
      <%= link_to user_path(post_comment.user.id) do%>
        <%= attachment_image_tag post_comment.user, :profile_image, :fill,40,40, format: 'jpeg',
        fallback: 'no_image-ede28af4bad96368ef41be1b4be1cffce0d9402540f75d17895e32cb0d2af5e6.jpeg', size:'45x45', class:'rounded-circle'%>
      <% end %>
    </td>
    <td class="pt-4"><%= post_comment.post_comment%></td>
    <%if post_comment.user.id == current_user.id%>
      <td><%= link_to '削除', comment_post_comment_path(comment.id, post_comment.id), method: :delete, remote: true, class:'btn btn-danger' %></td>
    <% else %>
      <td></td>
    <% end %>
  </tr>
<% end %>