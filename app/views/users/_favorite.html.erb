<table class="table table-hover shadow-sm">
  <thead>
    <tr>
      <th></th>
      <th>タイトル</th>
      <th>本文</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% favorites.each do |favorite|%>
      <tr id="comment_<%= favorite.comment.id %>">
        <td><%= attachment_image_tag favorite.comment, :image, :fill,100,100, format: 'jpeg',
        fallback:'noimage.jpeg', size: '100x100'%></td>
        <td><%= link_to favorite.comment.title, comment_path(favorite.comment.id) %></td>
        <td><%= favorite.comment.body %></td>
        <td class="comment_favorite">
          <%= render 'favorites/favorite', comment: favorite.comment %>
        </td>
       </tr>
    <% end %>
  </tbody>
</table>