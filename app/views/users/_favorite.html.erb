<table class="table table-hover shadow-sm">
  <thead>
    <tr>
      <th></th>
      <th>タイトル</th>
      <th>本文</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% favorites.each do |favorite|%>
      <tr>
        <td><%= attachment_image_tag favorite.comment, :image, :fill,100,100, format: 'jpeg',
        fallback:'no_image-ede28af4bad96368ef41be1b4be1cffce0d9402540f75d17895e32cb0d2af5e6.jpeg'%></td>
        <td><%= link_to favorite.comment.title, comment_path(favorite.comment.id) %></td>
        <td><%= favorite.comment.body %></td>
        <td>
          <% if favorite.comment.favorited_by?(current_user)%>
            <%= link_to comment_favorites_path(favorite.comment.id), method: :delete do %>
              <i class="fas fa-heart heart"></i>
            <% end %>
          <% else %>
            <%= link_to comment_favorites_path(favorite.comment.id), method: :post do %>
              <i class="far fa-heart text-dark"></i>
            <% end %>
          <% end %>
        </td>
       </tr>
    <% end %>
  </tbody>
</table>