<div class="container">
  <div class="col-md-5 mx-auto  my-5 p-5 shadow">
    <h2 class="font-italic"><strong>ユーザー編集ページ</strong></h2>
    <%= form_with model: @user, local: true do |f| %>
      <div class="form-group">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, class:'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :profile_image %><br />
        <%= f.attachment_field :profile_image, class:'form-file-control' %>
      </div>
      <div>
        <%= f.submit '更新', class:'btn btn-primary'%>
      </div>
    <% end %>
  </div>
</div>
