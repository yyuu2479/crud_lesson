<header>
  <nav class="navbar navbar-expand-lg navbar-light bg-dark">
    <div class="container">
      <%= link_to root_path do%>
        <h1 class="navbar-brand text-light">ホームページタイトル</h1>
      <% end %>
      <ul class="navbar-nav">
        <% if user_signed_in? %>
          <%= link_to user_path(current_user.id) do%>
            <li class="btn btn-dark">詳細ページ</li>
          <% end %>
          <%= link_to destroy_user_session_path, method: :delete do%>
            <li class="btn btn-dark">ログアウト</li>
          <% end %>
        <% else %>
          <%= link_to new_user_registration_path do%>
            <li class="btn btn-primary">新規登録</li>
          <% end %>
          <%= link_to new_user_session_path do%>
            <li class="btn btn-success ml-3">ログイン</li>
          <% end %>
        <% end %>
      </ul>
    </div>
  </nav>
</header>