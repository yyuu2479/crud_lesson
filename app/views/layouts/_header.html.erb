<header>
  <nav class="navbar navbar-expand-lg navbar-light bg-dark">
    <div class="container">
      <%= link_to root_path do%>
        <h1 class="navbar-brand text-light mt-1">ホームページタイトル</h1>
      <% end %>
      <ul class="navbar-nav">
        <% if user_signed_in? %>
          <!--検索フォーム-->
          <div class="mt-1 pr-2">
            <%= form_with url: search_path, method: :get, local: true do |f|%>
              <%= f.text_field :content%>
              <%= f.select :model, options_for_select({'User'=>'user', 'Book'=>'book'})%>
              <%= f.select :method, options_for_select({'完全一致'=>'perfect', '前方一致'=>'forword', '後方一致'=>'backword', '部分一致'=>'Partial'})%>
              <%= f.submit '検索', class:'btn btn-light btn-sm'%>
            <% end %>
          </div>

          <%= link_to user_path(current_user.id) do%>
            <%= attachment_image_tag current_user, :profile_image, :fill,40,40, format: 'jpeg',
            fallback: 'no_image-ede28af4bad96368ef41be1b4be1cffce0d9402540f75d17895e32cb0d2af5e6.jpeg', size:'40x40', class:'rounded-circle'%>
          <% end %>
          <%= link_to destroy_user_session_path, method: :delete do%>
            <li class="btn btn-dark mt-1 fas fa-sign-out-alt">ログアウト</li>
          <% end %>
        <% else %>
          <%= link_to new_user_registration_path do%>
            <li class="btn btn-primary fas fa-user-plus p-3">新規登録</li>
          <% end %>
          <%= link_to new_user_session_path do%>
            <li class="btn btn-success fas fa-sign-in-alt ml-3 p-3">ログイン</li>
          <% end %>
        <% end %>
      </ul>
    </div>
  </nav>
</header>